<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="#F7F7F7"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_society_issue_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:src="@mipmap/society_back" />
        <TextView
            android:gravity="center"
            android:id="@+id/tv_society_issue_issue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="发布"
            android:textColor="@color/selector_issue_text_color"
            android:textSize="@dimen/common_text_size"
            android:textStyle="bold" />
    </RelativeLayout>

    <include layout="@layout/society_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:background="#ffffff">

        <EditText
            android:id="@+id/et_society_issue_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:background="@null"
            android:hint="请对照片进行描述"
            android:textColor="@color/colorTextBlack"
            android:textColorHint="#aaaaaa"
            android:textSize="@dimen/usual_text_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="13dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_society_issue_add1"
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:layout_marginBottom="17dp"
                android:src="@mipmap/society_addphoto" />

            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_society_issue_add2"
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:layout_marginBottom="17dp"
                android:src="@mipmap/society_addphoto" />

            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_society_issue_add3"
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:layout_marginBottom="17dp"
                android:src="@mipmap/society_addphoto" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="17dp"
            android:layout_marginRight="15dp"
            android:text="(最多3张)"
            android:textColor="#aaaaaa"
            android:textSize="@dimen/usual_text_size" />
    </RelativeLayout>

    <include layout="@layout/line_normal" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp">

        <include layout="@layout/line_normal" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rl_society_issue_disclose"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="将说说设置为只能自己可见?"
            android:textSize="@dimen/common_text_size" />

        <ImageView
            android:id="@+id/iv_society_issue_on_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/selector_issue_yesorno" />
    </RelativeLayout>

    <include layout="@layout/line_normal" />

</LinearLayout>